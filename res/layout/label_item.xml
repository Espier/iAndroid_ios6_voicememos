<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:minHeight="50dip"
	android:background="@drawable/label_item_selctor">

   <TextView android:id="@+id/label_name" android:textSize="18sp" 
        android:layout_marginLeft="10dip" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerVertical="true" 
        android:textColor="@color/black" android:textStyle="bold" />

	<ImageView android:id="@+id/label_check" android:visibility="gone"
		android:layout_centerVertical="true" android:layout_marginRight="10dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentRight="true" android:src="@drawable/select" />

	

</RelativeLayout>